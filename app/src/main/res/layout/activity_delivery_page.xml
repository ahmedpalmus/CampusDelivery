<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryPage"
    android:orientation="vertical"
    android:background="@drawable/box_2"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="5dp"
        android:paddingHorizontal="3dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/min1"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:gravity="right"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/min2"
            android:gravity="right"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#70E807"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="My Status"
            android:gravity="center"
            android:textColor="#000"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Available"
            android:textSize="20sp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:orientation="vertical">
            <Button
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/gradient_light"
                android:drawableTop="@drawable/food"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Orders"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#3949AB"
                android:textSize="18sp" />
            <Button
                android:id="@+id/the_profile"
                android:layout_marginHorizontal="30dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Profile"
                android:textSize="14sp"
                android:textColor="#3949AB"
                android:background="@drawable/gradient_light"
                android:textAlignment="center"
                android:drawableTop="@drawable/profile1"
                />
            <Button
                android:id="@+id/the_support"
                android:layout_marginHorizontal="30dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Support"
                android:textSize="14sp"
                android:textColor="#3949AB"
                android:background="@drawable/gradient_light"
                android:textAlignment="center"
                android:drawableTop="@drawable/supp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>