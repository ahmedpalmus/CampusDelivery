<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage"
    android:orientation="vertical"
    android:background="@color/white"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="5dp"
        android:paddingHorizontal="3dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/min1"
           android:gravity="left"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:gravity="right"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/min2"
            android:gravity="right"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                >
                <Button
                    android:id="@+id/the_orders"
                    android:layout_marginHorizontal="1dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Orders"
                    android:textSize="14sp"
                    android:textColor="#3949AB"
                    android:background="@drawable/gradient_light"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/order"
                    />
                <Button
                    android:id="@+id/the_profile"
                    android:layout_marginHorizontal="1dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Profile"
                    android:textSize="14sp"
                    android:textColor="#3949AB"
                    android:background="@drawable/gradient_light"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/user"
                    />
                <Button
                    android:id="@+id/the_support"
                    android:layout_marginHorizontal="1dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Support"
                    android:textSize="14sp"
                    android:textColor="#3949AB"
                    android:background="@drawable/gradient_light"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/support"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <Button
                    android:id="@+id/food"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:drawablePadding="5dp"

                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Food"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/box_7"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/food"
                    />
                <Button
                    android:id="@+id/books"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Books"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/box_7"
                    android:textAlignment="center"
android:drawableTop="@drawable/books"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <Button
                    android:id="@+id/lectures"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Lectures"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/box_7"
                    android:drawableTop="@drawable/lecture"
                    />

                <Button
                    android:id="@+id/meds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_7"
                    android:padding="10dp"
                    android:text="Medicine"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:drawableTop="@drawable/medicine"
                    android:textSize="18dp" />
            </LinearLayout>
           </LinearLayout>
    </ScrollView>

</LinearLayout>