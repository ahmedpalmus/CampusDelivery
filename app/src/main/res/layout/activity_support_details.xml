<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportDetails"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="5dp"
        android:paddingHorizontal="3dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/min1"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:gravity="right"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/min2"
            android:gravity="right"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/s_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="title"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/s_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="25/07/2022"
        android:textColor="#555252"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDF6F5F5"
        android:elevation="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/s_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="By: "
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <TextView
        android:layout_marginVertical="10dp"
        android:id="@+id/s_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="details"
        android:background="#fff"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/s_resp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:lines="4"
        android:hint="No response"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linear17"
        android:visibility="gone"
        android:paddingVertical="10dp">

        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@drawable/box_4"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:text="Send"/>
        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_5"
            android:textColor="@color/white"
            android:text="@string/cancel"/>
    </LinearLayout>

</LinearLayout>